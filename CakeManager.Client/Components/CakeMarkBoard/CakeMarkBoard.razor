@inherits CakeMarkBoardComponent
@using CakeManager.Client.Components.OfficeDropdown

<OfficeDropdown @ref="OfficeDropdown"></OfficeDropdown>

<div class="table-responsive">
    <table class="table">

        <thead>
            <tr>
                <th></th>
                <th>Email</th>
                <th>Cake Marks</th>
            </tr>
        </thead>

        @if (GridLoading)
        {
            <tr>
                <td colspan="3" style="text-align: center;">
                    <div class="spinner-border text-secondary" role="status" />
                </td>
            </tr>
        }

        @foreach (var cakeMarkGridData in CakeMarkGridData.Items)
        {
            <tr>
                <td style="width: 150px">
                    @for (var i = 0; i < cakeMarkGridData.SuperCakeMarks; i++) {
                        <span class="oi oi-cart"/>
                    }
                </td>
                <td>@cakeMarkGridData.Email</td>
                <td>@cakeMarkGridData.CakeMarks</td>
            </tr>
        }

    </table>
</div>
