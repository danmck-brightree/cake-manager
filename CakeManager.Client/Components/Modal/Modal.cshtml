@inherits ModalComponent

<div class="modal fade" id="@Id" tabindex="-1" role="dialog" aria-labelledby="addCakeMarkModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="@LabelId">@Title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          @ModalContent
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="@ClickButton">@ButtonText</button>
      </div>
    </div>
  </div>
</div>